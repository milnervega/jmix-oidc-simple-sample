<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://authorBrowse.caption"
        focusComponent="authorsTable">
    <data readOnly="true">
        <collection id="authorsDc"
                    class="com.company.sample.entity.Author">
            <fetchPlan extends="_base"/>
            <loader id="authorsDl">
                <query>
                    <![CDATA[select e from Author e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="authorsTable" spacing="true">
        <filter id="filter"
                dataLoader="authorsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="authorsTable"
                    width="100%"
                    dataContainer="authorsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="authorsTable.create"/>
                <button id="editBtn" action="authorsTable.edit"/>
                <button id="removeBtn" action="authorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
